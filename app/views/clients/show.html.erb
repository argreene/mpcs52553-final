<div class="page-header">
  <h1>Client  Account</h1>
</div>

<div class="row">
  <div class="col-sm-12">

    <p>
      <strong>Name:</strong> <%= @client.client_name %>
    </p>

    <p>
      <strong>Email Address:</strong> <%= @client.client_contact %>
    </p>

  </div>
</div>

<div>
  <p>
    <strong>Orders Placed: </strong>
  </p>
</div>

<div class="row table-responsive">
  <div class="col-sm-6">

    <table class="table table-striped table-bordered">
      <thead>
      <th>Order ID</th>
      <th>Provider</th>
      <th>Service</th>
      <th>Date Placed</th>
      <th>Number of Hours</th>
      </thead>
      <% @orders.each do |order| %>
          <% provider = Provider.find_by(id: order.provider_id) %>
          <tr>
            <td><%= order.id %></td>
            <td><%= provider.provider_name %></td>
            <td><%= order.service_id %></td>
            <td><%= order.created_at.localtime.strftime("%B %d, %Y") %></td>
            <td><%= order.amount %></td>
          </tr>
      <% end %>
    </table>

  </div>
</div>


