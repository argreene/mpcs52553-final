<div class="page-header">
  <h1>My Account</h1>
</div>

<div class="row">
  <div class="col-sm-12">

    <p>
      <strong>Name:</strong> <%= @client.client_name %>
    </p>

    <p>
      <strong>Email Address:</strong> <%= @client.client_contact %>
    </p>

    <p>
      <strong>Password:</strong> <%= @client.password %>
    </p>

  </div>
</div>

<div class="row">
  <div class="col-sm-12">

    <h3>Order History</h3>

    <% @orders.each do |order| %>

      <div class="media img-responsive">
        <div class="media-left">
          <a href="/providers/<%= order.provider.id %>">
          </a>
        </div>
        <div class="media-body">
          <h4 class="media-heading"><%= order.provider.provider_name %></h4>
          <%= order.provider.description %>
        </div>
      </div>

    <% end %>
  </div>
</div>
