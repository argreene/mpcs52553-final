<div class="page-header">
  <h1>Sign up as a new client</h1>
</div>

<div class="row">
  <div class="col-sm-4">

  <%= form_tag("/clients", method: 'post') do  %>

    <div class="form-group">
      <%= label_tag :name, "Your name:" %>
      <%= text_field_tag :name, @name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, @email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :password, "Pick a Password" %>
      <%= text_field_tag :password, "", class: 'form-control' %>
    </div>

    <%= submit_tag "Sign Me Up", class: 'btn btn-success btn-lg'%>
    or
    <%= link_to "Cancel", root_url %>

  <% end %>

  </div>
</div>
