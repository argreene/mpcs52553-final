<div class="page-header">
  <h1>Sign up as a new Service Provider</h1>
</div>

<div class="row">
  <div class="col-sm-4">

    <%= form_tag("/providers", method: 'post') do  %>

    <div class="form-group">
      <%= label_tag :name, "Provider Name" %>
      <%= text_field_tag :name, @name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :email, "Provider E-Mail" %>
      <%= text_field_tag :email, @email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :address, "Provider Mailing Address" %>
      <%= text_field_tag :address, @address, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :rate, "Hourly Rate" %>
      <%= number_field_tag :rate, @rate, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :description, "Description" %>
      <%= text_area_tag :description, @description,
                        rows: 5, class: 'form-control' %>
    </div>

    <div class="form-group">
       <%= label_tag :password, "Pick a Password" %>
       <%= text_field_tag :password, "", class: 'form-control' %>
    </div>


    <%= submit_tag "Submit new provider", class: 'btn btn-success btn-lg'%>
    or
    <%= link_to "Cancel", "/providers" %>

  <% end %>

  </div>
</div>
