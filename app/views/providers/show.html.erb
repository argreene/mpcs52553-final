<div class="page-header">
  <h1><%= @provider.provider_name %></h1>

  <p>

    <%= link_to "Edit This Provider Information", "/providers/#{@provider.id}/edit" %>
    |
    <%= link_to "Delete This Listing", "/products/#{@provider.id}", method: 'delete', data: { confirm: "Are you crazy?" } %>
  </p>
</div>

<div class="row">



  <div class="col-sm-8">

    <p>
      <%= @provider.provider_contact %>
    </p>

    <p>
      <%= @provider.provider_address %>
    </p>

    <p>
      <%= @provider.description %>
    </p>


    <p class="price"><%= number_to_currency(@provider.rate) %>
      <% if session["client_id"].present? %>
          <% user = Client.find_by(id: session["client_id"]) %>
          <% user_id = user.id %>
          <%= link_to "Hire", "/orders/#{@provider.id}?client=#{user_id}", class: "btn btn-lg btn-success" %>
      <% else %>
          Sign In To Hire This Attorney
      <% end %>


    </p>

    <hr>


  </div>

</div>
